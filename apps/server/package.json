{
  "name": "server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "@vps-claude/api": "workspace:*",
    "@vps-claude/auth": "workspace:*",
    "@vps-claude/db": "workspace:*",
    "@vps-claude/env": "workspace:*",
    "@vps-claude/logger": "workspace:*",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "hono": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@vps-claude/config": "workspace:*",
    "@vps-claude/test-utils": "workspace:*",
    "tsdown": "^0.16.5",
    "typescript": "catalog:",
    "vitest": "^3.2.4"
  }
}
