{
  "name": "server",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsgo --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/server.ts --outfile server",
    "dev": "bun run --hot src/server.ts",
    "start": "bun run dist/server.js",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "@vps-claude/api": "workspace:*",
    "@vps-claude/auth": "workspace:*",
    "@vps-claude/coolify": "workspace:*",
    "@vps-claude/db": "workspace:*",
    "@vps-claude/email": "workspace:*",
    "@vps-claude/logger": "workspace:*",
    "@vps-claude/queue": "workspace:*",
    "@vps-claude/redis": "workspace:*",
    "@vps-claude/shared": "workspace:*",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "hono": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@typescript/native-preview": "catalog:",
    "@vps-claude/config": "workspace:*",
    "@vps-claude/test-utils": "workspace:*",
    "tsdown": "^0.19.0-beta.5"
  }
}
