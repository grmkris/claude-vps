{
  "name": "box-agent",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build --compile --minify --sourcemap ./src/index.ts --outfile dist/box-agent",
    "build:linux": "bun build --compile --target=bun-linux-x64 --minify ./src/index.ts --outfile dist/box-agent-linux-x64",
    "start": "bun run src/index.ts",
    "typecheck": "tsgo --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.19",
    "@modelcontextprotocol/sdk": "^1.13.0",
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "@vps-claude/logger": "workspace:*",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "hono": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@vps-claude/config": "workspace:*",
    "drizzle-kit": "catalog:"
  }
}
