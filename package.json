{
  "name": "vps-claude",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "hono": "^4.8.2",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9",
      "@orpc/client": "^1.12.2"
    }
  },
  "type": "module",
  "scripts": {
    "check": "oxlint && oxfmt --write",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @vps-claude/db db:push",
    "db:studio": "turbo -F @vps-claude/db db:studio",
    "db:generate": "turbo -F @vps-claude/db db:generate",
    "db:migrate": "turbo -F @vps-claude/db db:migrate",
    "db:start": "turbo -F @vps-claude/db db:start",
    "db:watch": "turbo -F @vps-claude/db db:watch",
    "db:stop": "turbo -F @vps-claude/db db:stop",
    "db:down": "turbo -F @vps-claude/db db:down"
  },
  "dependencies": {
    "@vps-claude/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@vps-claude/config": "workspace:*",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.5"
}
