{
  "name": "vps-claude",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tests/*"
    ],
    "catalog": {
      "hono": "^4.11.5",
      "@orpc/server": "^1.13.4",
      "@orpc/openapi": "^1.13.4",
      "@orpc/zod": "^1.13.4",
      "@orpc/client": "^1.13.4",
      "@orpc/tanstack-query": "^1.13.2",
      "better-auth": "^1.4.17",
      "@better-auth/cli": "^1.4.10",
      "dotenv": "^17.2.2",
      "zod": "^4.3.6",
      "tsdown": "^0.20.1",
      "typeid-js": "^1.2.0",
      "drizzle-orm": "^0.45.1",
      "drizzle-zod": "^0.8.3",
      "drizzle-kit": "^0.31.8",
      "ioredis": "5.9.2",
      "bullmq": "^5.67.0",
      "@types/bun": "^1.3.5",
      "@tanstack/react-query": "^5.90.16",
      "@tanstack/react-query-devtools": "^5.90.12",
      "neverthrow": "^8.2.0",
      "@faker-js/faker": "^10.1.0",
      "@types/node": "^25.0.7",
      "@electric-sql/pglite": "^0.3.14",
      "next": "16.1.1",
      "react": "19.2.3",
      "react-dom": "19.2.3",
      "@types/react": "19.2.9",
      "@types/react-dom": "19.2.3",
      "pino": "^10.3.0",
      "pino-http": "^11.0.0",
      "pino-pretty": "^13.1.3",
      "tailwindcss": "^4.1.18",
      "@tailwindcss/postcss": "^4.1.18",
      "@typescript/native-preview": "^7.0.0-dev.20260124.1",
      "typescript": "^5.8.2"
    }
  },
  "type": "module",
  "scripts": {
    "npkill": "bunx npkill -D -y && rm bun.lock",
    "check": "ultracite check --type-aware --type-check",
    "fix": "ultracite fix --type-aware --type-check",
    "fix:unsafe": "ultracite fix --unsafe --type-aware --type-check",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "dev": "rm -rf logs && mkdir -p logs && turbo dev",
    "dev:tui": "turbo dev",
    "build": "turbo build",
    "db:studio": "bun run --filter=@vps-claude/db db:studio",
    "db:generate": "bun run --filter=@vps-claude/db db:generate",
    "db:start": "bun run --filter=@vps-claude/db db:start",
    "db:stop": "bun run --filter=@vps-claude/db db:stop",
    "db:clean": "bun run --filter=@vps-claude/db db:clean"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@typescript/native-preview": "catalog:",
    "@vps-claude/config": "workspace:*",
    "@vps-claude/logger": "workspace:*",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.39.0",
    "oxlint-tsgolint": "^0.11.0",
    "turbo": "^2.7.4",
    "ultracite": "7.0.12"
  },
  "packageManager": "bun@1.3.5"
}
